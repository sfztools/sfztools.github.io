{%-if    include.opcode.version-%} {%-assign opcode_version = include.opcode.version-%}
{%-elsif include.parent.version-%} {%-assign opcode_version = include.parent.version-%}
{%-else-%}                         {%-assign opcode_version = toplevel_opcode.version-%}
{%-endif-%}

{%-assign sfizz_opcode = site.data.sfizz.support.opcodes
	| where: "name", include.opcode.name | first-%}

{%-if sfizz_opcode == nil
	    or sfizz_opcode.support == 'x'-%}   {%-assign opcode_support = 'x'-%}
{%-elsif sfizz_opcode.support == "wip"-%} {%-assign opcode_support = "wip"-%}
{%-else-%}                                {%-assign opcode_support = 'v'-%}
{%-endif-%}

{%-if      opcode_version == "ARIA"-%}   {%-assign ariaTotal = ariaTotal | plus: 1-%}
	{%-if    opcode_support == 'v'-%}      {%-assign ariaDone  = ariaDone  | plus: 1-%}
	{%-elsif opcode_support == "wip"-%}    {%-assign ariaWip   = ariaWip   | plus: 1-%}
	{%-endif-%}
{%-elsif   opcode_version == "SFZ v1"-%} {%-assign sfz1Total = sfz1Total | plus: 1-%}
	{%-if    opcode_support == 'v'-%}      {%-assign sfz1Done  = sfz1Done  | plus: 1-%}
	{%-elsif opcode_support == "wip"-%}    {%-assign sfz1Wip   = sfz1Wip   | plus: 1-%}
	{%-endif-%}
{%-elsif   opcode_version == "SFZ v2"-%} {%-assign sfz2Total = sfz2Total | plus: 1-%}
	{%-if    opcode_support == 'v'-%}      {%-assign sfz2Done  = sfz2Done  | plus: 1-%}
	{%-elsif opcode_support == "wip"-%}    {%-assign sfz2Wip   = sfz2Wip   | plus: 1-%}
	{%-endif-%}
{%-else-%}                               {%-assign cakeTotal = cakeTotal | plus: 1-%}
	{%-if    opcode_support == 'v'  -%}    {%-assign cakeDone  = cakeDone  | plus: 1-%}
	{%-elsif opcode_support == "wip"-%}    {%-assign cakeWip   = cakeWip   | plus: 1-%}
	{%-endif-%}
{%-endif-%}

{%-for alias in include.opcode.alias-%}
	{% include sfizz/status/functions/add_opcode.liquid
		category = include.category
		parent   = include.opcode
		opcode   = alias %}
{%-endfor-%}

{%-for midi_cc in include.opcode.modulation.midi_cc-%}
	{% include sfizz/status/functions/add_opcode.liquid
		category = include.category
		parent   = include.opcode
		opcode   = midi_cc %}
{%-endfor-%}

{%-for velocity_cc in include.opcode.modulation.velocity-%}
	{% include sfizz/status/functions/add_opcode.liquid
		category = include.category
		parent   = include.opcode
		opcode   = velocity_cc %}
{%-endfor-%}
